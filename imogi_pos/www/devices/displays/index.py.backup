import frappe\nfrom frappe import _\nfrom imogi_pos.utils.branding import get_brand_context\nfrom imogi_pos.utils.react_helpers import add_react_context\nfrom imogi_pos.utils.error_pages import set_setup_error\n\n\ndef get_context(context):
    """Context builder for Customer Display page."""
    try:
        # Get branding info
        branding = get_brand_context()
        
        context.setup_error = False
        context.branding = branding
        context.title = _("Customer Display")
        
        # Add React bundle URLs and initial state (auto-loads from manifest.json)
        add_react_context(context, 'customer-display', {
            'branding': branding
        })

        return context
    except frappe.Redirect:
        raise
    except Exception as e:
        frappe.log_error(f"Error in devices_displays get_context: {str(e)}")
        set_setup_error(context, "generic", str(e), page_name=_("Customer Display"))
        context.title = _("Customer Display")
        return context
